<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="3dp"
    android:layout_margin="5dp"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_margin="5dp"
            android:weightSum="3"
            android:id="@+id/linLay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            >
            <LinearLayout
                android:id="@+id/linLay1"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                >
                <TextView
                    android:id="@+id/hourFTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 PM"
                    android:textSize="18sp"
                    />

                <TextView
                    android:id="@+id/dateNameFTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Friday"
                    android:textSize="16sp"
                    />

                <TextView
                    android:id="@+id/dateFTV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="27 - 9 - 2018"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/linLay2"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    >
                    <ImageView
                        android:id="@+id/weatherIconFTV"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="05dp"
                        android:layout_marginEnd="10dp"
                        />
                    <TextView
                        android:id="@+id/tempFTV"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="3dp"
                        android:text="29"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/tempDescriptionFTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="sunny"
                    android:textColor="@color/black"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:id="@+id/linLay3"
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:gravity="right"
                >
                <TextView
                    android:id="@+id/tempMaxFTV"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Max Temp 30"
                    />
                <TextView
                    android:id="@+id/tempMinFTV"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Min Temp 29" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>